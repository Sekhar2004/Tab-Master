{
  "manifest_version": 3,
  "name": "Tab Master",
  "description": "A useful tab manager for Chrome.",
  "version": "1.0",
  "permissions": ["tabs", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
